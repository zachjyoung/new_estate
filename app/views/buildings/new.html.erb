<%- if !@building.valid? -%>
  <ul class="errors">
    <%- @building.errors.each do |error| -%>
      <li><%= error %></li>
    <%- end -%>
  </ul>
<%- end -%>  

<%= form_for @building do |f| %>

  <div><%= f.label :street_address %>
  <%= f.text_field :street_address %></div>

  <div><%= f.label :city %>
  <%= f.text_field :city %></div>

  <div><%= f.label :state %>
  <%= f.text_field :state %></div>

   <div><%= f.label :postal_code %>
  <%= f.text_field :postal_code %></div>

  <div><%= f.label :description %>
    <%= f.text_field :description %></div>

  <div><%= f.submit "Create" %></div>
<%- end -%>
